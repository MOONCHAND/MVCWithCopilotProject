@model MVCCopilotDemo.Models.UpdateEmployeeViewModel
@{
}
<h1>Edit Employee</h1>
<!-- add a form to edit the employee-->
<form method="post" action="View" class="mt-5">
    <!-- // create a div class for EmployeeId-->
    <div class="mb-3">
        <label for="" class="form-label">Employee Id</label>
        <input type="text" class="form-control" asp-for="EmployeeId" readonly>
    </div>


    <!-- // create a div class for EmployeeName-->
    <div class="mb-3">
        <label for="" class="form-label">Employee Name</label>
        <input type="text" class="form-control" asp-for="EmployeeName">
    </div>
    <!-- // create a div class for EmployeeEmail-->
    <div class="mb-3">
        <label for="" class="form-label">Employee Email</label>
        <input type="email" class="form-control" asp-for="EmployeeEmail">
    </div>
    <!--// create a div class for EmployeeSalary-->
    <div class="mb-3">
        <label for="" class="form-label">Employee Salary</label>
        <input type="number" class="form-control" asp-for="EmployeeSalary">
    </div>

    <!--// create a div class for date of birth-->
    <div class="mb-3">
        <label for="" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth">
    </div>
    <!--// create a div class for Department without select button-->
    <div class="mb-3">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <!--// create a delete button-->
    <button type="submit" class="btn btn-danger" asp-action="Delete"
    asp-controller="Employees">Delete</button>
</form>



